pragma solidity ^0.8.20;

import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "./LotteryTemplate.sol"; 

import "../interfaces/ILotteryFactoryMiddleware.sol";

contract LotteryFactoryMiddleware is Initializable, ILotteryFactoryMiddleware {
    //////////////////////////////////////////////////////////////////////////////////////////////////
    // State
    //////////////////////////////////////////////////////////////////////////////////////////////////

    address private s_cloneImplementation;

    //////////////////////////////////////////////////////////////////////////////////////////////////
    // Initialization
    //////////////////////////////////////////////////////////////////////////////////////////////////

    function initialize() public initializer override {
        s_cloneImplementation = address(new LotteryTemplate());
    }

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() { _disableInitializers(); }

    //////////////////////////////////////////////////////////////////////////////////////////////////
    // Public functions
    //////////////////////////////////////////////////////////////////////////////////////////////////

    // Get functions

    function cloneImplementation() public view override returns(address) {
        return s_cloneImplementation;
    }
}
